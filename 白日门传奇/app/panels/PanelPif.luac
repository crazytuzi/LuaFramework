local PanelPif = {}
local var = {}

function PanelPif.initView()
	var = {
		xmlPanel,
		progressBar,
		labBar,
		labBar1,
		curPifId=nil,
		fireworks=nil,
		PifLevel=0,
		pifWai=nil,
	}
	var.xmlPanel = UILuaLoader.load("uilayout/PanelPif.uif")
	if var.xmlPanel then
		cc.EventProxy.new(NetClient,var.xmlPanel)
			:addEventListener(Notify.EVENT_PUSH_PANEL_DATA, PanelPif.handlePanelData)
		PanelPif.initBtn()

		local pifEff = var.xmlPanel:getWidgetByName("imgpif"):getChildByName("pifEff")
		var.xmlPanel:getWidgetByName("imgpif"):setTouchEnabled(true)
		if not pifEff then
			pifEff = cc.Sprite:create()
			pifEff:setName("pifEff")
			pifEff:setPosition(250,230)
					:setTouchEnabled(false)
					:addTo(var.xmlPanel)
			local animate = cc.AnimManager:getInstance():getPlistAnimate(4,50028, 4, 5)
			pifEff:runAction(cca.repeatForever(animate))
		end			
		--------------------------------------------	
		
		local titleFloor = var.xmlPanel:getChildByName("titleFloor")
		if not titleFloor then
			titleFloor = cc.Sprite:create()
						:setName("titleFloor")
						:align(display.CENTER, 209, 197)
						:setBlendFunc({src = gl.SRC_ALPHA, dst = gl.ONE})
						:addTo(var.xmlPanel:getChildByName("img_left_bg"))
			cc.AnimManager:getInstance():getPlistAnimateAsync(titleFloor,4,50028,0,0,0,true)
		end
		return var.xmlPanel
	end
end

